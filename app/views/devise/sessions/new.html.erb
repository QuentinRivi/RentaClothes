
<div class="bannernew" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/322207/pexels-photo-322207.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">

<div class="banner-content">
  <h1>Rent my clothes</h1> <br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
         <div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
         </div>
      </div>

  <div class="form-actions devise-sessions-new">
    <%= f.button :submit, "Log in", :class => :"btn btn-primary" %>
  </div> <br>
<% end %>

<%= render "devise/shared/links" %>

</div>
