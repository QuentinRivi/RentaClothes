
<div class="bannerindex" style="background-image: linear-gradient(100deg, rgba(240,240,240,0.6) 0%, rgba(240,240,240,0.6) 50%)">

<div> <br>
<h2 class="title">Chose a clothe to rent!</h2>
</div> <br> <br>

<div class="main-container">
  <div class="row">

    <div class="boxfixleft">
        <%= search_form_for @search do |f| %>
      <div>
      <%= f.label :"Looking for :" %>
      <%= f.search_field :name_cont %>
      </div>

      <div>
        <%= f.label :"Brand :" %>
        <%= f.search_field :brand_start %>
      </div>

      <div>
        <%= f.label :"Size :"%>
        <%= f.search_field :size_cont %>
      </div>
        <%= f.submit :class => :"btn btn-primary" %>
        <%= link_to "Reset", clothes_path, :class => :"btn btn-primary" %>
      <% end %>
    </div>

    <div class="row">
     <div class="container boxfixleft">
      <% @clothes.each do |clothe| %>
        <div class="col-xs-10 col-md-4">
         <%= render 'clothecard', clothe: clothe %>
        </div>
      <% end %>
    </div>
  </div>

      <div class = "container text-center" >
        <%= link_to "Add a clothe", "clothes/new", :class => :"btn btn-primary"%>
      </div>
</div>
