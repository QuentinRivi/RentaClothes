<div class="container text-center">

  <h1>My clothes</h1>
  <% @clothes.each do |clothe| %>
    <div class="col-xs-12 col-md-4">
     <%= render 'clothecard', clothe: clothe %>
  </div>
  <% end %>

  <% if @clothes.blank? %>
    <div class = "container text-center" >
    <p>You don't have any piece of clothing to rent now. You can <%= link_to "add", "clothes/new"%> one and start renting your clothes!</p>
  </div>
  <% end %>
</div>