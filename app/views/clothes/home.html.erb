<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5)), url('<%= image_path "banner.jpg" %>')";>
  <div class="banner-content">
    <h1>RentaClothes</h1>
    <span id="zeubi">Rent yours best</span>
    <span id="banner-typed-text"></span>
    <span id="typed"></span>
    <!-- <p>Rent yours clothes</p> -->
    <!-- <a class="btn btn-primary btn-lg">Rent yours clothes</a> -->
  </div>
</div>
<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="card-container text-center">
          <h4 id="home-h4">Our latest items</h4>
          <div class="row">
            <% @clothes.each do |clothe| %>
              <div class="col-xs-12 col-md-4">
                <%= render 'clothecard', clothe: clothe %>
              </div>
            <% end %>
          </div>
        </div>
        <br><br>
        <div class="home-text text-center">
          <p id="Leggo">To see all of our items</p>
          <%= link_to "Click here", clothes_path, class: "btn btn-primary" %>
        </div>
      </div>
    <div class="col-xs-6">
      <div
          id="map"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        >
       </div>
    </div>
   </div>
  </div>
</div>
<div class="footer">
  <div class="center">
    <div id="social-test">
      <h2>Follow us at yours favorites socials</h2>
      <ul class="social">
        <li><i class="fa fa-facebook" aria-hidden="true"></i></li>
        <li><i class="fa fa-twitter" aria-hidden="true"></i></li>
        <li><i class="fa fa-instagram" aria-hidden="true"></i></li>
        <li><i class="fa fa-vimeo" aria-hidden="true"></i></li>
        <li><i class="fa fa-github" aria-hidden="true"></i></li>
      </ul>
    </div>
    <h5 id="CasseCouilleLeCss">Made at LeWagon with Love</h5>
  </div>
</div>
